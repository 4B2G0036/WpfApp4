<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="MainWindow" Height="468" Width="842">
    <DockPanel LastChildFill="False">
        <Menu Height="30" DockPanel.Dock="Top">
            <MenuItem Height="30" Header="檔案" VerticalContentAlignment="Center">
                <MenuItem Header="新增畫布" />
                <MenuItem Header="開啟檔案" />
            </MenuItem>
        </Menu>
        <ToolBarTray Height="40" DockPanel.Dock="Top">
            <ToolBar Height="40" Background="Bisque" HorizontalAlignment="Left" Width="586">
                <Label Content="筆刷色彩" FontSize="14" VerticalContentAlignment="Center" FontWeight="Bold"/>
                <xctk:ColorPicker x:Name="strokecolorpicker" Width="100" MouseLeftButtonDown="myCanvas_MouseLeftButtonDown"/>
                <Label Content="填滿色彩" FontSize="14" VerticalContentAlignment="Center" FontWeight="Bold"/>
                <xctk:ColorPicker x:Name="fillColorPicker" Width="100" MouseLeftButtonDown="myCanvas_MouseLeftButtonDown"/>
                <Slider x:Name="strokeThicknessSlider" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Minimum="1" IsSnapToTickEnabled="True" Margin="20,0,0,0" />
                <Label Width="40" Margin="10, 0, 10, 0" Content="{Binding Value, ElementName = strokeThicknessSlider}" FontSize="14" Foreground="DarkGoldenrod" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" />
            </ToolBar>
            <ToolBar Height="38" Width="250" Background="#FF43E663">
                <RadioButton Width="34" Height="38" Tag="line" Click="ShapeButton_Click" >
                    <Image Height="32" Width="37" Source="/line.png" />
                </RadioButton>
                <RadioButton Width="34" Height="38" Tag="rectangle" Click="ShapeButton_Click" >
                    <Image Height="32" Width="37" Source="/rectangle.png" />
                </RadioButton>
                <RadioButton Width="34" Height="38" Tag="ellipse" Click="ShapeButton_Click" >
                    <Image Height="32" Width="37" Source="/ellipse.png" />
                </RadioButton>
                <RadioButton Width="34" Height="38" Tag="polyline" Click="ShapeButton_Click" >
                    <Image Height="32" Width="37" Source="/polyline.png" />
                </RadioButton>
                <Separator/>
                <RadioButton Width="34" Height="38" Tag="erase" Click="eraserButton_Click" >
                    <Image Height="32" Width="37" Source="/eraser.png" />
                </RadioButton>
                <RadioButton Width="34" Height="38" Tag="clear" Click="ClearButton_Click" >
                    <Image Height="32" Width="37" Source="/trashcan.png" />
                </RadioButton>
            </ToolBar>
        </ToolBarTray>
        <Canvas x:Name="myCanvas" Width="840" Background="#FF458990" Height="331" MouseEnter="myCanvas_MouseEnter" DockPanel.Dock="Top" MouseLeftButtonDown="myCanvas_MouseLeftButtonDown" MouseUp="myCanvas_MouseUp" MouseMove="myCanvas_MouseMove"/>
        <StatusBar Height="40" DockPanel.Dock="Bottom" Background="BlanchedAlmond">
            <StatusBarItem Margin="0,-2,0,5">
                <Label x:Name="statuslabel" Content="Ready" FontSize="14"/>
            </StatusBarItem>
            <StatusBarItem Margin="0,-2,0,5">
                <Label x:Name="statuspoint" Content="(0, 0) - (0, 0)" FontSize="14"/>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
